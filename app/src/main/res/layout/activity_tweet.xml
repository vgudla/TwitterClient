<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="5dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivProfile"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTweetText"
        android:textSize="11sp"
        android:layout_marginLeft="10dp"
        android:autoLink="all"
        android:layout_toEndOf="@+id/ivProfile"
        android:layout_below="@+id/tvTimestamp"
        android:layout_toRightOf="@+id/ivProfile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:id="@+id/tvTimestamp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvUserName"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_above="@+id/tvTweetText"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/ivProfile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvScreenName"
        android:textSize="10sp"
        android:layout_above="@+id/tvTweetText"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/tvUserName" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/ivReplyButton"
        android:src="@drawable/reply"
        android:layout_below="@+id/ivDetailedView"
        android:layout_toRightOf="@+id/ivProfile"
        android:layout_marginLeft="50dp"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/ivRetweet"
        android:src="@drawable/retweet"
        android:layout_below="@+id/ivDetailedView"
        android:layout_toRightOf="@+id/ivReplyButton"
        android:layout_marginLeft="50dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvRetweetCount"
        android:textSize="10sp"
        android:layout_below="@+id/ivDetailedView"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ivRetweet" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/ivFavorite"
        android:src="@drawable/star"
        android:layout_below="@+id/ivDetailedView"
        android:layout_toRightOf="@+id/tvRetweetCount"
        android:layout_marginLeft="50dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvFavoriteCount"
        android:textSize="10sp"
        android:layout_below="@+id/ivDetailedView"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ivFavorite" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivDetailedView"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/tvTweetText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>